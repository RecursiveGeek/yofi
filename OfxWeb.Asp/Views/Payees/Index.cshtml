@model IEnumerable<OfxWeb.Asp.Models.Payee>

@{
    ViewData["Title"] = "Payees";
}

<h2>Payees</h2>

<p>
    <a asp-action="Create">Create New</a> |
    <a asp-action="Index"
       asp-route-search="@ViewData["CurrentFilterToggleSelected"]">
        Bulk Edit</a> |
    <a asp-action="Download">Export</a>
</p>

@if ((bool)(ViewData["ShowSelected"]))
{
    <form asp-action="BulkEdit" method="post">
        <div class="form-actions">
            <p>
                Category <input type="text" name="Category" />
                SubCategory <input type="text" name="SubCategory" />
                <input type="submit" value="OK" class="btn btn-secondary" />
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </p>
        </div>
    </form>
}

<table class="table">
    <thead>
        <tr>
            @if ((bool)(ViewData["ShowSelected"]))
            {
                <th>
                    Edit
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.ID">
                @if ((bool)(ViewData["ShowSelected"]))
                {
                    <td>
                        @{ var checkedornot = (item.Selected == true) ? "checked" : string.Empty; }
                        <input type="checkbox" class="checkbox-payee-selected" @checkedornot data-id="@item.ID">
                    </td>
                }
                <td class="display-category">
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td class="display-subcategory">
                    @Html.DisplayFor(modelItem => item.SubCategory)
                </td>
                <td class="display-payee">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="#" data-id="@item.ID" data-toggle="modal" data-target="#editPayeeModal">
                        <i class="fa fa-edit"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Upload</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Payees" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

<!-- Modal Edit -->
<!-- https://getbootstrap.com/docs/4.0/components/modal/ -->
<!-- Working on this: https://stackoverflow.com/questions/16011151/mvc-4-edit-modal-form-using-bootstrap -->

<div class="actiondialog modal fade" id="editPayeeModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true" data-endpoint="/Payees/EditModal/">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
