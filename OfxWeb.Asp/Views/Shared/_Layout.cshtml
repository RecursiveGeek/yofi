@inject IConfiguration _config
@{
    var hassiteconfig = _config.GetSection("Site").Exists();
    var brand = hassiteconfig ? _config["Site:Brand"] : _config["Codebase:Brand"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <environment exclude="Development">
        <title>@ViewData["Title"] - @brand</title>
    </environment>
    <environment include="Development">
        <title>@ViewData["Title"] - Development - @brand</title>
    </environment>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha256-djO3wMl9GeaC/u6K+ic4Uj/LKhRUSlUFcsruzS7v5ms=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@5.15.3/css/all.min.css" integrity="sha256-2H3fkXt6FEmrReK448mDVGKb3WW2ZZw35gI7vqHOE4Y=" crossorigin="anonymous">

    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" />
    </environment>
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

</head>
<body>
    <!-- Navbar needs fixing for bootstrap 4.0 -->
    <!-- https://getbootstrap.com/docs/4.0/components/navbar/ -->

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            @if(hassiteconfig)
            {
            <span class="navbar-brand"><i class="@_config["Site:Icon"]"></i> @_config["Site:Brand"]</span>
            }
            else
            {
            <span class="navbar-brand">@_config["Codebase:Brand"]</span>
            }
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse me-auto" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Import">Import</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Report">Reports</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Payees" asp-action="Index">Payees</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="BudgetTxs" asp-action="Index">Budget</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding-top: 15px">
        @RenderBody()
    </div>
    <footer class="bd-footer py-5 mt-5 bg-light">
        <div class="container py-5">
            <div class="row">
                <div class="col">
                    @if(hassiteconfig)
                    {
                    <a class="d-inline-flex align-items-center mb-2 link-dark text-decoration-none" href="/" aria-label="@_config["Site:Brand"]">
                        <span class="fs-5"><i class="@_config["Site:Icon"]"></i> @_config["Site:Brand"]</span>
                    </a>
                    <ul class="list-unstyled small text-muted">
                        <li class="mb-2"><a href="@_config["Site:Link"]">@_config["Site:Link"]</a></li>
                        <li class="mb-2">@_config["Site:Owner"]</li>
                    </ul>
                    }
                </div>
                <div class="col">
                </div>
                <div class="col text-end">
                    <ul class="list-unstyled small text-muted mb-0">
                        <li>Powered by:</li>
                    </ul>
                    <a class="d-inline-flex align-items-center mb-2 link-dark text-decoration-none" target="_blank" href="@_config["Codebase:Link"]" aria-label="YoFi">
                        <span class="fs-5">@_config["Codebase:Brand"]</span>
                    </a>
                    <ul class="list-unstyled small text-muted">
                        <li class="mb-2">@_config["Codebase:Tagline"]</li>
                        <li class="mb-2">Code licensed <a href="@_config["Codebase:LicenseLink"]" target="_blank">@_config["Codebase:License"]</a>.</li>
                        <li class="mb-2">Report an <a href="@_config["Codebase:IssuesLink"]">issue</a>.</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha256-fh8VA992XMpeCZiRuU4xii75UIG6KvHrbUF8yIS/2/4=" crossorigin="anonymous"></script>

    <environment exclude="Development">
        <script src="~/js/dist/bootstrap-autocomplete.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <environment include="Development">
        <script src="~/js/dist/bootstrap-autocomplete.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
