@model OfxWeb.Asp.Controllers.PivotTable<OfxWeb.Asp.Controllers.Label, OfxWeb.Asp.Controllers.Label, decimal>
@{
    var icons = new[] { "&check;", "!!", "X" };
}

<h2>
    @ViewData["Title"]
</h2>
<h3>
    @ViewData["Subtitle"]
</h3>

<table class="table pivot-table">
    <thead>
        <tr>
        <tr>
            <th></th>
            @foreach (var column in Model.Columns)
            {
                <th>
                    @column.Value
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.RowLabels)
        {
            var emphasis = row.Emphasis ? "emphasis" : "";

            <tr>
                @if (string.IsNullOrEmpty(row.SubValue))
                {
                    <th>
                        @row.Value
                    </th>
                }
                else
                {
                    <td class="subhead @emphasis">
                        @row.SubValue
                    </td>
                }
                @foreach (var column in Model.Columns)
                {
                    var cell = Model.Table[row][column];
                    var format = column.Format ?? row.Format ?? "C2";

                    if (format == "icon")
                    {
                        <td class="@emphasis">
                            @Html.Raw( icons[(int)cell] )
                        </td>
                    }
                    else
                    {
                        <td class="@emphasis">
                            @cell.ToString(format)
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

<hr/>

<p>
    <a asp-action="Pivot" asp-route-report="monthly">Monthly</a> |
    <a asp-action="Pivot" asp-route-report="details">Details</a> |
    <a asp-action="Pivot" asp-route-report="yearly">Yearly</a> |
    <a asp-action="Pivot" asp-route-report="budgettx">Budget Tx</a> |
    <a asp-action="Pivot" asp-route-report="budgetmo">Monthly Budget</a> |
    <a asp-action="Pivot" asp-route-report="budget">Budget vs Actuals</a>
</p>

