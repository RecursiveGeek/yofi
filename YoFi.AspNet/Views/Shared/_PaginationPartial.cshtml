<div class="mt-2 row">
    <div class="col-sm-7">
        <p class="fs-6">Displaying @ViewData["PageFirstItem"] through @ViewData["PageLastItem"] of @ViewData["PageTotalItems"].</p>
    </div>
    <nav class="col-sm-5" aria-label="Pagination control">
        <ul class="pagination pagination-sm justify-content-end">
            @if (ViewData["FirstPage"] != null)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       aria-label="First Page"
                       class="page-link">&laquo;</a>
                </li>
            }
            @if (ViewData["PreviousPreviousPage"] != null)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@ViewData["PreviousPreviousPage"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@ViewData["PreviousPreviousPage"]</a>
                </li>
            }
            @if (ViewData["PreviousPage"] != null)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@ViewData["PreviousPage"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@ViewData["PreviousPage"]</a>
                </li>
            }
            <li class="page-item active" aria-current="page">
                <span class="page-link">@(ViewData["Page"] ?? 1)</span>
            </li>
            @if (ViewData["NextPage"] != null)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@ViewData["NextPage"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@ViewData["NextPage"]</a>
                </li>
            }
            @if (ViewData["NextNextPage"] != null)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@ViewData["NextNextPage"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@ViewData["NextNextPage"]</a>
                </li>
            }
            @if (ViewData["LastPage"] != null)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@ViewData["LastPage"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       aria-label="Last Page"
                       class="page-link">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>