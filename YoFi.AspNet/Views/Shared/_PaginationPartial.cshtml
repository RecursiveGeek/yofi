@model Common.AspNet.PageDivider
<div class="mt-2 row">
    <div class="col-sm-7">
        <p class="fs-6">Displaying @Model.PageFirstItem through @Model.PageLastItem of @Model.PageTotalItems.</p>
    </div>
    <nav class="col-sm-5" aria-label="Pagination control">
        <ul class="pagination pagination-sm justify-content-end">
            @if (Model.FirstPage.HasValue)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       aria-label="First Page"
                       class="page-link">&laquo;</a>
                </li>
            }
            @if (Model.PreviousPreviousPage.HasValue)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@Model.PreviousPreviousPage"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@Model.PreviousPreviousPage</a>
                </li>
            }
            @if (Model.PreviousPage.HasValue)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@Model.PreviousPage"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@Model.PreviousPage</a>
                </li>
            }
            <li class="page-item active" aria-current="page">
                <span class="page-link">@Model.Page</span>
            </li>
            @if (Model.NextPage.HasValue)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@Model.NextPage"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@Model.NextPage</a>
                </li>
            }
            @if (Model.NextNextPage.HasValue)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@Model.NextNextPage"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       class="page-link">@Model.NextNextPage</a>
                </li>
            }
            @if (Model.LastPage.HasValue)
            {
                <li class="page-item">
                    <a asp-route-o="@ViewData["Order"]"
                       asp-route-p="@Model.LastPage"
                       asp-route-q="@ViewData["Query"]"
                       asp-route-v="@ViewData["ViewP"]"
                       aria-label="Last Page"
                       class="page-link">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>