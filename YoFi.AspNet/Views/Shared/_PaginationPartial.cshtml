@model Common.AspNet.PageDivider
<div class="mt-2 row">
    <div class="col-sm-7">
        <p class="fs-6">Displaying <span data-test-id="firstitem">@Model.PageFirstItem</span> through <span data-test-id="lastitem">@Model.PageLastItem</span> of <span data-test-id="totalitems">@Model.PageTotalItems</span>.</p>
    </div>
    <nav class="col-sm-5" aria-label="Pagination control">
        <ul class="pagination pagination-sm justify-content-end">
            @if (Model.ShowFirstPage)
            {
                <li class="page-item">
                    <a asp-route-o="@Model.Parameters.Order"
                       asp-route-q="@Model.Parameters.Query"
                       asp-route-v="@Model.Parameters.View"
                       aria-label="First Page"
                       class="page-link">&laquo;</a>
                </li>
            }
            @if (Model.ShowPreviousPreviousPage)
            {
                var showpage = Model.PageInfo.Page - 2;
                <li class="page-item">
                    <a asp-route-o="@Model.Parameters.Order"
                       asp-route-p="@showpage"
                       asp-route-q="@Model.Parameters.Query"
                       asp-route-v="@Model.Parameters.View"
                       class="page-link">@showpage</a>
                </li>
            }
            @if (Model.ShowPreviousPage)
            {
                var showpage = Model.PageInfo.Page - 1;
                <li class="page-item">
                    <a asp-route-o="@Model.Parameters.Order"
                       asp-route-p="@showpage"
                       asp-route-q="@Model.Parameters.Query"
                       asp-route-v="@Model.Parameters.View"
                       class="page-link">@showpage</a>
                </li>
            }
            <li class="page-item active" aria-current="page">
                <span class="page-link">@Model.Page</span>
            </li>
            @if (Model.ShowNextPage)
            {
                var showpage = Model.PageInfo.Page + 1;
                <li class="page-item">
                    <a asp-route-o="@Model.Parameters.Order"
                       asp-route-p="@showpage"
                       asp-route-q="@Model.Parameters.Query"
                       asp-route-v="@Model.Parameters.View"
                       class="page-link" data-test-id="nextpage">@showpage</a>
                </li>
            }
            @if (Model.ShowNextNextPage)
            {
                var showpage = Model.PageInfo.Page + 2;
                <li class="page-item">
                    <a asp-route-o="@Model.Parameters.Order"
                       asp-route-p="@showpage"
                       asp-route-q="@Model.Parameters.Query"
                       asp-route-v="@Model.Parameters.View"
                       class="page-link">@showpage</a>
                </li>
            }
            @if (Model.ShowLastPage)
            {
                <li class="page-item">
                    <a asp-route-o="@Model.Parameters.Order"
                       asp-route-p="@Model.PageInfo.TotalPages"
                       asp-route-q="@Model.Parameters.Query"
                       asp-route-v="@Model.Parameters.View"
                       aria-label="Last Page"
                       class="page-link">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>