        <div class="modal-content">
            <form method="post" action="/Transactions/Download">
                <input type="hidden" name="q" value="@Model.QueryParameter">
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal" data-test-id="btn-dl-cancel">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-test-id="btn-dl-save">Save</button>
