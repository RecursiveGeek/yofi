@model YoFi.AspNet.Controllers.TransactionsController.IndexViewModel

@{
    ViewData["Title"] = "Transactions";

    var prevDisabled = Model.Divider.PreviousPage == null ? "disabled" : "";
    var nextDisabled = Model.Divider.NextPage == null ? "disabled" : "";

}


@section scripts {
    <script type="text/javascript">
        function dropHandler(ev) {
        }

        function dragOverHandler(ev) {
            console.log('File(s) in drop zone');

            // Prevent default behavior (Prevent file from being opened)
            ev.preventDefault();
        }
    </script>
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}

<input type="hidden" id="xsrf"
       name="xsrf" value="@GetAntiXsrfRequestToken()">

<nav class="navbar navbar-light navbar-page mb-3">
    <div class="container">
        <span class="navbar-brand">Transactions</span>
        <form class="d-flex" asp-action="Index" asp-route-v="@Model.ViewParameter" asp-route-o="@Model.OrderParameter" method="post">
            <input class="form-control me-2 category-autocomplete input-lg" type="search" data-test-id="q" placeholder="Search" aria-label="Search" name="q" value="@Model.QueryParameter" autocomplete="off">
            <button type="submit" class="btn btn-secondary me-1" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Search" data-test-id="btn-search">
                <i class="fas fa-search"></i>
            </button>
            <span data-bs-toggle="tooltip" data-bs-placement="bottom" title="Help">
                <a href="#" data-bs-toggle="modal" data-bs-target="#searchHelpModal" class="btn btn-outline-secondary me-1" data-test-id="btn-help"><i class="fas fa-question"></i></a>
            </span>
            <a asp-action="Index" asp-route-o="@Model.OrderParameter" asp-route-v="@Model.ViewParameter" class="btn btn-outline-secondary me-1" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Clear" data-test-id="btn-clear"><i class="fas fa-times"></i></a>
        </form>
        <div class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuButtonAction" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonAction">
                <a asp-action="Create" class="btn">Create New</a>
                <a asp-action="Index" class="btn"
                   asp-route-o="@Model.OrderParameter"
                   asp-route-p="@Model.PageParameter"
                   asp-route-q="@Model.QueryParameter"
                   asp-route-v="@Model.ToggleHidden">
                    @(Model.ShowHidden?"Hide Hidden":"Show Hidden")
                </a>
                <a asp-action="Index" class="btn"
                   asp-route-o="@Model.OrderParameter"
                   asp-route-p="@Model.PageParameter"
                   asp-route-q="@Model.QueryParameter"
                   asp-route-v="@Model.ToggleSelected">
                    @(Model.ShowSelected?"Cancel Bulk Edit":"Bulk Edit")
                </a>
                <a href="#" data-bs-toggle="modal" data-bs-target="#exportHowModal" class="btn">Export</a>
            </div>
        </div>
    </div>
</nav>


@if (Model.ShowSelected)
{
    <div class="mt-2">
        <form asp-action="BulkEdit" asp-route-o="@Model.OrderParameter"  method="post">
            <div class="form-actions">
                <p>
                    Set Category To: <input type="text" name="Category" class="col-md-4 category-autocomplete" autocomplete="off" />
                    <input type="submit" value="OK" class="btn btn-primary" data-bs-toggle="tooltip" title="Submit" />
                    <a asp-action="Index" asp-route-o="@Model.OrderParameter" asp-route-q="@Model.QueryParameter" asp-route-v="@Model.ToggleSelected" class="btn btn-outline-secondary">Cancel</a>
                </p>
            </div>
        </form>
    </div>
}

<table class="table">
    <thead>
        <tr>
            @if (Model.ShowHidden)
            {
                <th>
                    Hidden
                </th>
            }
            @if (Model.ShowSelected)
            {
                <th>
                    Edit
                </th>
            }
            <th class="col-1">
                <a asp-action="Index" asp-route-q="@Model.QueryParameter" asp-route-v="@Model.ViewParameter" asp-route-o="@Model.DateSortParm">Date</a>
            </th>
            <th class="col-5">
                <a asp-action="Index" asp-route-q="@Model.QueryParameter" asp-route-v="@Model.ViewParameter" asp-route-o="@Model.PayeeSortParm">@nameof(Transaction.Payee)</a>
            </th>
            <th class="col-1" style="text-align:right">
                <a asp-action="Index" asp-route-q="@Model.QueryParameter" asp-route-v="@Model.ViewParameter" asp-route-o="@Model.AmountSortParm">@nameof(Transaction.Amount)</a>
            </th>
            <th class="col-2">
                <a asp-action="Index" asp-route-q="@Model.QueryParameter" asp-route-v="@Model.ViewParameter" asp-route-o="@Model.CategorySortParm">@nameof(Transaction.Category)</a>
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Memo)
            </th>
            @if (Model.ShowHidden)
            {
                <th>
                    <a asp-action="Index" asp-route-q="@Model.QueryParameter" asp-route-v="@Model.ViewParameter" asp-route-o="@Model.BankReferenceSortParm">@nameof(Transaction.BankReference)</a>
                </th>
            }
            <th colspan="5" class="col-1">
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            var line = 1;
        }
        @foreach (var item in Model.Items)
        {
            <tr class="txdrop" data-id="@item.ID" ondragover="dragOverHandler(event);" data-test-id="line-@(line++)">
                @if (Model.ShowHidden)
                {
                    <td>
                        @{ var checkedornot = (item.Hidden == true) ? "checked" : string.Empty; }
                        <input type="checkbox" class="checkbox-post" @checkedornot data-endpoint="/api/Hide/@item.ID" >
                    </td>
                }
                @if (Model.ShowSelected)
                {
                    <td>
                        @{ var checkedornot = (item.Selected == true) ? "checked" : string.Empty; }
                        <input type="checkbox" class="checkbox-post" @checkedornot data-endpoint="/api/Select/@item.ID" data-test-id="check-select">
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td class="display-payee">
                    @Html.DisplayFor(modelItem => item.Payee)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td class="display-category">
                    @if (item.HasSplits)
                    {
                        <p>SPLIT</p>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Category)
                    }
                </td>
                <td class="display-memo">
                    @Html.DisplayFor(modelItem => item.Memo)
                </td>
                @if (Model.ShowHidden)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.BankReference)
                    </td>
                }
                <td style="padding-left:0; padding-right:5px">

                    @if (item.HasSplits)
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID" target="_blank" data-test-id="edit-splits">
                            <i class="fa fa-edit"></i>
                        </a>
                    }
                    else
                    {
                        <a href="#" data-id="@item.ID" data-bs-toggle="modal" data-bs-target="#editModal">
                            <i class="fa fa-edit" data-bs-toggle="tooltip" title="Edit"></i>
                        </a>
                    }
                </td>
                <td style="padding-left:0; padding-right:5px">
                    <a asp-action="Index"
                       asp-route-o="@Model.OrderParameter"
                       asp-route-v="@Model.ViewParameter"
                       asp-route-q="p=@item.Payee?.Trim()">
                        <i class="fa fa-search" data-bs-toggle="tooltip" title="Search Payee"></i>
                    </a>
                </td>
                <td style="padding-left:0; padding-right:5px">
                    <a href="#" data-id="@item.ID" data-bs-toggle="modal" data-bs-target="#addPayeeModal">
                        <i class="fa fa-plus" data-bs-toggle="tooltip" title="Add Payee"></i>
                    </a>
                </td>
                <td style="padding-left:0; padding-right:5px">
                    <a href="#" class="apply-link" data-id="@item.ID"><i class="fa fa-paint-brush" data-bs-toggle="tooltip" title="Apply Payee"></i></a>
                </td>
                <td style="padding-left:0; padding-right:0" class="display-receipt">
                    @if (item.HasReceipt)
                    {
                        <a href="/Transactions/GetReceipt/@item.ID" target="_blank"><i class="far fa-file-pdf" data-bs-toggle="tooltip" title="Get Receipt"></i></a>
                    }
                    else
                    {
                        <a href="/Transactions/GetReceipt/@item.ID" style="display:none" target="_blank"><i class="fa fa-file-pdf" data-bs-toggle="tooltip" title="Get Receipt"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("/Views/Shared/_PaginationPartial.cshtml", Model.Divider)

